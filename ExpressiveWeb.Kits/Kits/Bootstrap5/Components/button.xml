<?xml version="1.0" encoding="utf-8" ?>
<Component xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/sebbouez/ExpressiveWeb/refs/heads/main/Schemas/schema_components.xsd">

    <UID>bootstrap.Button</UID>
    <Name>Button</Name>

    <Features>
        <InlineEdit/>
    </Features>

    <Variants>
        <Variant Name="Primary" ClassName="btn-primary"/>
        <Variant Name="Secondary" ClassName="btn-secondary"/>
        <Variant Name="Success" ClassName="btn-success"/>
        <Variant Name="Danger" ClassName="btn-danger"/>
        <Variant Name="Warning" ClassName="btn-warning"/>
        <Variant Name="Info" ClassName="btn-info"/>
        <Variant Name="Light" ClassName="btn-light"/>
        <Variant Name="Dark" ClassName="btn-dark"/>
        <Variant Name="Link" ClassName="btn-link"/>
    </Variants>

    <Allows>text</Allows>

    <Template>
        <![CDATA[
        <a class="btn">Button</a>
        ]]>
    </Template>

</Component>