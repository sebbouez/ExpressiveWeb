<?xml version="1.0" encoding="utf-8" ?>
<Component xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/sebbouez/ExpressiveWeb/refs/heads/main/Schemas/schema_components.xsd">

    <UID>bootstrap.Row</UID>
    <Name>Row</Name>

    <Actions>
        <Action Header="Add column" Command="AppendChild" Params="bootstrap.Col"/>
    </Actions>

    <Styles>
        <Section Name="Horizontal content alignment">
            <OptionsGroup>
                <Option Name="Left" Role="HorizontalAlignmentLeft" ClassName="justify-content-start"/>
                <Option Name="Center" Role="HorizontalAlignmentCenter" ClassName="justify-content-center"/>
                <Option Name="Right" Role="HorizontalAlignmentRight" ClassName="justify-content-end"/>
            </OptionsGroup>
        </Section>
        <Section Name="Vertical content alignment">
            <OptionsGroup>
                <Option Name="Top" Role="VerticalAlignmentTop" ClassName="align-items-start"/>
                <Option Name="Center" Role="VerticalAlignmentTop" ClassName="align-items-center"/>
                <Option Name="Bottom" Role="VerticalAlignmentTop" ClassName="align-items-end"/>
                <Option Name="Stretch" Role="VerticalAlignmentTop" ClassName="align-items-stretch"/>
            </OptionsGroup>
        </Section>
    </Styles>

    <Allows>bootstrap.Col</Allows>


    <Template>
        <![CDATA[
        <div class="row">
            <slot/>
        </div>
        ]]>
    </Template>

</Component>