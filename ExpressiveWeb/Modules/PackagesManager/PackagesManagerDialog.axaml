<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:localization="clr-namespace:ExpressiveWeb.Localization;assembly=ExpressiveWeb.Localization"
        xmlns:buttons="clr-namespace:ExpressiveWeb.Presentation.Buttons;assembly=ExpressiveWeb.UI.Internal"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ExpressiveWeb.Modules.PackagesManager.PackagesManagerDialog"
        WindowStartupLocation="CenterOwner"
        Title="PackagesManagerDialog">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0">dsdsd</TextBlock>

        <Grid Grid.Row="1">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBox Grid.Row="0" x:Name="TbSearch" KeyDown="TbSearch_OnKeyDown"></TextBox>


        </Grid>


        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <buttons:EWButton Margin="8,0,0,0" Click="BtnOk_OnClick"
                              Text="{x:Static localization:Resources.ButtonOk}" />
            
            <buttons:EWButton Margin="8,0,0,0" Click="BtnCancel_OnClick"
                              Text="{x:Static localization:Resources.ButtonCancel}" />
        </StackPanel>
    </Grid>


</Window>