<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:localization="clr-namespace:ExpressiveWeb.Localization;assembly=ExpressiveWeb.Localization"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ExpressiveWeb.Panels.OnlineStatusPanel">


    <StackPanel>
        <TextBlock FontWeight="SemiBold" Text="{x:Static localization:Resources.OnlineStatus}" Margin="0,0,0,4" />
        <TextBlock TextWrapping="Wrap" Text="{x:Static localization:Resources.OnlineStatusDescription}" />

        <ToggleSwitch x:Name="BtnSwitch" Click="BtnSwitch_OnClick" Margin="0,8,0,0"
                      Content="{x:Static localization:Resources.OnlineStatusOfflineRequired}">
        </ToggleSwitch>
    </StackPanel>


</UserControl>