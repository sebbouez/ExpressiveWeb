<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:kit="clr-namespace:ExpressiveWeb.Core.Kit;assembly=ExpressiveWeb.Core"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ExpressiveWeb.Panels.Gallery.GalleryPanel">

    <ListBox x:Name="LsGalleryItems">
        <ListBox.ItemTemplate>

            <DataTemplate DataType="kit:KitGalleryItem">
                <StackPanel>
                    <Image Width="160" Height="80" />
                    <TextBlock Text="{Binding Name}" />
                </StackPanel>
            </DataTemplate>

        </ListBox.ItemTemplate>


    </ListBox>


</UserControl>