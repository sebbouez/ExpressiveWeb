<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ExpressiveWeb.Panels.Styles.BoxStyleDropDownPanel">

    <StackPanel>

        <TextBlock>Border color</TextBlock>
        
        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
            <Border Height="32" Width="32" Margin="0,0,4,4" Background="Green"/>
            <Border Height="32" Width="32" Margin="0,0,4,4" Background="Orange"/>
            <Border Height="32" Width="32" Margin="0,0,4,4" Background="MediumPurple"/>
        </StackPanel>

        <TextBlock Margin="0,8,0,0">Background color</TextBlock>
        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
            <Border Height="32" Width="32" Margin="0,0,4,4" Background="Green"/>
            <Border Height="32" Width="32" Margin="0,0,4,4" Background="Orange"/>
            <Border Height="32" Width="32" Margin="0,0,4,4" Background="MediumPurple"/>
        </StackPanel>

    </StackPanel>

</UserControl>