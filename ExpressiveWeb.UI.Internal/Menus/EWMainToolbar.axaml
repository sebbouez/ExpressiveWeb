<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:menus="clr-namespace:ExpressiveWeb.Presentation.Menus">


    <ControlTheme TargetType="menus:EWMainToolbar" x:Key="{x:Type menus:EWMainToolbar}">
        <Setter Property="Template">
            <ControlTemplate>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*" />
                        <ColumnDefinition Width="3*" />
                        <ColumnDefinition Width="3*" />
                    </Grid.ColumnDefinitions>

                    <menus:EWToolbar Grid.Column="0" x:Name="PART_ToolbarLeft"/>  
                    <menus:EWToolbar Grid.Column="1" x:Name="PART_ToolbarCenter"/>
                    <menus:EWToolbar Grid.Column="1" x:Name="PART_ToolbarRight"/>

                </Grid>

            </ControlTemplate>
        </Setter>
    </ControlTheme>

</ResourceDictionary>